---
import Layout from "../layouts/Layout.astro"
import Lightbox from "../components/Lightbox"
import '../styles/pages/menu.scss'

import menu from "../assets/image/pbp_menu.jpg"
import close_icon from "../assets/icon/close_icon.png"
import download_icon from "../assets/icon/download_icon.png"
import zoom_icon from "../assets/icon/zoom_icon.png"
---

<Layout>
<div class="menu_page">
    <div class="left_side" >
        <div class="menu_container">
            <Lightbox src={menu} zoom={zoom_icon} close={close_icon} download={download_icon} alt="Open menu." client:load />
        </div>
    </div>
    <div class="right_side">
        <div class="words">
            <h2 class="sentence">
                BUILT ON DOUGH.
            </h2>
            <h2 class="sentence">
                POWERED BY CHEESE.
            </h2>
            <h2 class="sentence">
                FORGED IN FLAVOR.
            </h2>
        </div>
        <div class="button_container">
            <h3>HUNGRY YET?</h3>
            <button class="button">ORDER FOR PICKUP</button>
        </div>
    </div>
</div>
</Layout>